{% if restaurant.primaryColor is defined and restaurant.primaryColor %}
    
{% set color = restaurant.primaryColor %}

h1, h2, h3, h4, h5, h6 {
    color: {{ color }};
}

body.order h4.step {
    color: {{ color }};
}

a {
    color: {{ color }};
}

a:hover, a:focus {
    color: {{ color|color_darken(15) }};
}

.navbar-default .navbar-nav > li > a {
    color: {{ color }};
}

.navbar-default .navbar-nav > li > a:hover {
    color: {{ color|color_darken(15) }};
}

section#menu a.filter:active, section#menu a.filter.active {
    border: 1px solid {{ color }};
}

.btn-primary {
    background-color: {{ color }};
    border-color: {{ color }};
}

.btn-primary:hover, .btn-primary:focus, .btn-primary.focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary {
    background-color: {{ color|color_darken(15) }};
    border-color: {{ color|color_darken(15) }};
}

.btn-white, .btn-white:hover, .btn-white:active, .btn-white:focus {
    color: {{ color }};
}

.text-primary, .text-primary:hover {
    color: {{ color }};
}

.navbar-default .navbar-toggle .icon-bar {
    background-color: {{ color }};
}

#splash {
    background-color: {{ color }};
}

{% endif %}

{% if restaurant.secondaryColor is defined and restaurant.secondaryColor %}
    
{% set color = restaurant.secondaryColor %}

.btn-info {
    background-color: {{ color }};
    border-color: {{ color }};
}

.btn-info:hover, .btn-info:focus, .btn-info.focus, .btn-info:active, .btn-info.active, .open > .dropdown-toggle.btn-info {
    background-color: {{ color|color_darken(15) }};
    border-color: {{ color|color_darken(15) }};
}

#cart .header {
    background-color: {{ color }};
}

#cart .header .total {
    background-color: {{ color|color_darken(30) }};
}

.text-info, .text-info:hover {
    color: {{ color }};
}

.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
    color: white;
    background-color: {{ color }};
}

section#discounts .big-number {
    color: {{ color }};
}

.navbar-default .navbar-brand, .navbar-default .navbar-brand:hover, .navbar-default .navbar-brand:focus {
    color: {{ color }};
}
{% endif %}

{% if site.darkBackground %}
body {
    background-color: #191919;
    color: #f8f8f8;
}

h1, h2, h3, h4, h5, h6 {
  color: #f8f8f8;
}

h1.thin, h2.thin, h3.thin, h4.thin, h5.thin {
    color: #f8f8f8;
}

.well h1.thin, .well h2.thin, .well h3.thin, .well h4.thin, .well h5.thin {
    color: #191919;
}

section#description {
    background-color: #191919;
}

#footer {
    background-color: #191919;
    border-top: 1px solid #191919;
}

section#menu .product .media-heading h4, section#menu .product .media-heading .price {
    background-color: #191919;
}

{% if restaurant.primaryColor is defined and restaurant.primaryColor %}
    
{% set color = restaurant.primaryColor %}
section#menu h3 {
  color: {{ color }};
}

section#menu h3:after {
  background: {{ color }};
}
{% endif %}

.list-group-item {
    background-color: #191919;
    border: 1px solid #333333;
}

section#social .feed .card {
    color: #383637;
}
{% endif %}