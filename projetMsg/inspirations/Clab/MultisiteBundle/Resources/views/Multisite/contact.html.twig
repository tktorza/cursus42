{% extends 'ClabMultisiteBundle::base.html.twig' %}

{% block title %}Nous contacter - {% endblock %}
{% block ogtitle %}Nous contacter - {% endblock %}
{% block metaDescription %}Contactez-nous.{% endblock %}
{% block ogdescription %}Contactez-nous.{% endblock %}
{% block metaKeywords %}contact, adresse, horaire{% endblock %}

{% block subnav %}
    {% include 'ClabMultisiteBundle::subnav.html.twig' with { currentPage: 'contact' } %}
{% endblock %}

{% block body %}
<section class="container-fluid padding-v-60" id="contact">
    <div class="text-center">
        <h2 class="thin">Contactez-nous</h2>
        <p><strong><i class="fa fa-mobile fa-lg icon-left"></i>{{ phone_number_format(restaurant.phone, 'NATIONAL') }}</strong></p>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="{{ path('multisite_contact') }}" method="post">

                <div class="form-group">
                    {{ form_row(form.name, { attr: { class: 'form-control' } }) }}
                </div>

                <div class="row">
                    <div class="col-md-6 form-group">
                        {{ form_row(form.email, { attr: { class: 'form-control' } }) }}
                    </div>

                    <div class="col-md-6 form-group">
                        {{ form_row(form.phone, { attr: { class: 'form-control' } }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_row(form.message, { attr: { class: 'form-control', rows: 10 } }) }}
                </div>

                {{ form_rest(form) }}

                <br>
                <button type="submit" class="btn btn-info btn-block"><i class="fa fa-envelope icon-left"></i>{{ 'clickeat.contact.button'|trans }}</button>
            </form>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {% include 'ClabClickeatBundle:Mixpanel:mixpanel.html.twig' with { mixpanelTrack: 'View contact', mixpanelTrackProperties: { 'Restaurant': restaurant.name } } %}
{% endblock %}