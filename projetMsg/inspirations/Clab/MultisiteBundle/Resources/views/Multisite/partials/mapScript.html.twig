<script type="text/javascript">
google.maps.event.addDomListener(window, 'load', initialize);

function initialize() {
    map = new google.maps.Map(document.getElementById('map-canvas'), {
        zoom: 16,
        center: new google.maps.LatLng({{ restaurant.address.latitude }}, {{ restaurant.address.longitude }}),
        styles: mapStyle,
        scrollwheel: false,
        panControl: true,
        mapTypeControl: true,
        streetViewControl: true,
        zoomControl: true,
    });

    var marker = new google.maps.Marker({
        map: map,
        position: new google.maps.LatLng({{ restaurant.address.latitude }}, {{ restaurant.address.longitude }}),
        title: '{{ restaurant.name }}',
        icon: '{{ asset('front/bundle/byclickeat/img/map-marker.png') | imagine_filter('square_60') }}',
    });
}    
</script>