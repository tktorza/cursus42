<?php

namespace Clab\DeliveryBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Table(name="clab_delivery_man")
 * @ORM\Entity(repositoryClass="Clab\DeliveryBundle\Entity\Repository\DeliveryManRepository")
 */
class DeliveryMan
{
    /**
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @ORM\Column(name="color", type="string", length=255, nullable=true)
     */
    private $color;

    /**
     * @ORM\OneToMany(targetEntity="Delivery", mappedBy="deliveryMan")
     */
    protected $deliveries;

    /**
     * @ORM\OneToOne(targetEntity="Clab\UserBundle\Entity\User")
     * @ORM\JoinColumn(name="user_id", referencedColumnName="id", nullable=true)
     */
    private $user;

    /**
     * @ORM\ManyToMany(targetEntity="DeliveryDay", mappedBy="deliveryMen")
     */
    private $deliveryDays;

    protected $name;

    protected $trackingId;

    public function __construct()
    {
        $this->setColor('992b2b');

        $this->deliveryDays = new \Doctrine\Common\Collections\ArrayCollection();
    }

    public function isAllowed(\Clab\UserBundle\Entity\User $user)
    {
        return true;
    }

    public function getTrackingId()
    {
        if($this->getId()) {
            return sha1($this->getId());
        }

        return 1;
    }

    public function __toString()
    {
        return $this->getName();
    }

    public function getName()
    {
        if($this->getUser() && $this->getUser()) {
            return $this->getUser()->getFullname();
        }
        return null;
    }

    public function getId()
    {
        return $this->id;
    }

    public function setColor($color)
    {
        $this->color = str_replace("#", "", $color);
        return $this;
    }

    public function getColor()
    {
        return $this->color;
    }

    public function addDelivery(\Clab\DeliveryBundle\Entity\Delivery $deliveries)
    {
        $this->deliveries[] = $deliveries;
        return $this;
    }

    public function removeDelivery(\Clab\DeliveryBundle\Entity\Delivery $deliveries)
    {
        $this->deliveries->removeElement($deliveries);
    }

    public function getDeliveries()
    {
        return $this->deliveries;
    }

    public function setUser(\Clab\UserBundle\Entity\User $user = null)
    {
        $this->user = $user;

        return $this;
    }

    public function getUser()
    {
        return $this->user;
    }

    public function addDeliveryDay(\Clab\DeliveryBundle\Entity\DeliveryDay $deliveryDays)
    {
        $this->deliveryDays[] = $deliveryDays;
        return $this;
    }

    public function removeDeliveryDay(\Clab\DeliveryBundle\Entity\DeliveryDay $deliveryDays)
    {
        $this->deliveryDays->removeElement($deliveryDays);
    }

    public function getDeliveryDays()
    {
        return $this->deliveryDays;
    }

    public function hasDeliveryDay(\Clab\DeliveryBundle\Entity\DeliveryDay $deliveryDay)
    {
        return $this->getDeliveryDays()->contains($deliveryDay);
    }
}
