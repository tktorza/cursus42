{%- macro link(title, url) -%}
<a href="{{ url|raw }}" style="color: #3EC7BA;">{{ title|raw }}</a>
{%- endmacro -%}

{%- macro button(title, url) -%}
<div class="btn" style="Margin-bottom: 27px">
<![if !mso]><a style='mso-hide: all;border-left-width: 0;border-top-width: 0;border-bottom-width: 0;border-right-width: 0;border-radius: 4px;display: inline-block;font-size: 14px;font-weight: 700;line-height: 21px;padding-top: 9px;padding-bottom: 8px;padding-left: 22px;padding-right: 22px;text-align: center;text-decoration: none;color: #fff;background-color: #ec2e61;box-shadow: 0 3px 0 #bd254e;font-family: "PT Sans","Trebuchet MS",sans-serif !important' href="{{ url|raw }}">{{ title|raw }}</a><![endif]>
<!--[if mso]><v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" href="{{ url|raw }}" style="width:85px" arcsize="11%" fillcolor="#EC2E61" stroke="f"><v:shadow on="t" color="#BD254E" offset="0,3px"></v:shadow><v:textbox style="mso-fit-shape-to-text:t" inset="0px,8px,0px,7px"><center style="font-size:14px;line-height:21px;color:#FFFFFF;font-family:sans-serif;font-weight:700;mso-line-height-rule:exactly;mso-text-raise:2px">{{ title|raw }}</center></v:textbox></v:roundrect><![endif]-->
</div>
{%- endmacro -%}

{%- macro title(text) -%}
<h1 style='Margin-top: 0;color: #3b3e42;font-weight: 400;font-size: 40px;Margin-bottom: 20px;font-family: "PT Sans","Trebuchet MS",sans-serif !important;line-height: 48px'>{{ text|raw }}</h1>
{%- endmacro -%}

{%- macro text(text) -%}
<p style='Margin-top: 0;color: #60666d;font-size: 15px;font-family: "PT Sans","Trebuchet MS",sans-serif !important;line-height: 23px;Margin-bottom: 23px'>{{ text|raw }}</p>
{%- endmacro -%}

