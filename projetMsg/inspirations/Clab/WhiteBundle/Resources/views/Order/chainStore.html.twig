{% block javascripts %}
    {{ parent() }}

    <script>
        $(window).ready(function(){
            $(window).scroll(function(){
                console.log("scroll");
                var scroll = $(this).scrollTop(),scrollEnd = $('.address').offset().top;
                if (scroll >= scrollEnd) {
                    $(".navbar").addClass("navbar-scrolled");
                }else{
                    $(".navbar").removeClass("navbar-scrolled");
                }
            });
        });

        $('footer').addClass('full');
        $('.fa-check').hide();
        $('.fa-times').hide();
        $('.navbar-nav').addClass('homepage');
        $('.fa-ban').hide();

        if ($('input.address').val()) {
            $('.try').attr('disabled', false);
            $('.fa-check').fadeIn();
        }

        $('#autocomplete').keypress(function(e){
            if(e.keyCode == 13){
                e.preventDefault();
            };
        });

        var placeSearch, autocomplete;
        var componentForm = {
            street: {% if user and user.homeAddress  %}'{{ user.homeAddress.street }}'{% else %}''{% endif %},
            city: {% if user and user.homeAddress  %}'{{ user.homeAddress.city }}'{% else %}''{% endif %},
            zip: {% if user and user.homeAddress  %}'{{ user.homeAddress.zip }}'{% else %}''{% endif %}
        };
        autocomplete = new google.maps.places.Autocomplete(document.getElementById('autocomplete'),{types: ['geocode']});
        autocomplete.setComponentRestrictions({'country': "fr"});

        autocomplete.addListener('place_changed', function() {
            $('.fa-times').fadeOut();
            $('.fa-check').fadeIn();
            $('.try').attr('disabled', false);

            var place = autocomplete.getPlace();

            componentForm.street = place.name;
            componentForm.city = place.vicinity;

            for (component of place.address_components) {
                for (type of component.types) {
                    if(type == "postal_code") {
                        componentForm.zip = component.short_name;
                        $('.try').click();
                        return;
                    }
                }
            }
        });

        $('.address').on('click', function () {
            $('.try').attr('disabled', true);
            $('.fa-check').fadeOut();
            $('.fa-times').fadeIn();
            $('.order-text').show();
            $('.buttons').hide();
        });

        $('.button-order').click(function(){
            $('.hidden-input').slideDown(function () {
                $('.address').css('borderWidth', '100%').focus();
            });
        });

        $('.try').click(function (e) {
            e.preventDefault();

            if ($(this).attr('disabled')) {
                return sweetAlert('Oops...', 'Merci de saisir une adresse valide.','error');
            }

            var address = $('.address').val();

            var params = '?isDelivery=true&address='+address+'&street='+componentForm.street+'&city='+componentForm.city+'&zip='+componentForm.zip;

            $('.button-delivery').attr('href','{{ path('clab_white_serp') }}'+params);
            $('.button-order').attr('href','{{ path('clab_white_serp') }}'+'?address='+address+'&street='+componentForm.street+'&city='+componentForm.city+'&zip='+componentForm.zip);
            $('.order-text').hide();
            $('.buttons').show();
        });
    </script>
