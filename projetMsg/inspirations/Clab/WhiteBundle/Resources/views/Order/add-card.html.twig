{{ form_start(form, {'action':path('clab_white_card_add',{user:app.user.id}),'attr': {'id': 'payment-form'}}) }}

    <div class="row margin-v-15">
        <div class="col-xs-12 margin-v-2-5  no-padding">
            {{ form_widget(form.card, { 'attr': {'class': 'form-control border-transparent','placeholder ': 'Numero de carte','data-stripe':'number'} }) }}
        </div>
        <div class="col-xs-12 margin-v-2-5  no-padding">
            {{ form_widget(form.name, { 'attr': {'class': 'form-control border-transparent','placeholder': 'Porteur','data-stripe':'name'}, 'id':'cardName' }) }}
        </div>
        <div class="background-white col-xs-12 color-grey-4 margin-v-2-5 no-padding">
            <div class="col-xs-6 expire-text">Date d'expiration</div>
            <div id="cardExpiry" class="col-xs-6 no-padding" style="margin: 0px;">
                {{ form_widget(form.month, { 'attr': {'class': 'form-control select2','data-stripe':'exp-month'} }) }}
                {{ form_widget(form.year, { 'attr': {'class': 'form-control select2','data-stripe':'exp-year'} }) }}
            </div>
        </div>
        <div class="background-white col-xs-12 color-grey-4 margin-v-2-5 no-padding">
            <div class="form-group">
                <div class="col-xs-6 expire-text">Sécurité</div>
                <div class="col-xs-4">
                    {{ form_widget(form.cvc, { 'attr': {'class': 'form-control border-transparent','data-stripe':'cvc'},'id':'cardCVC'}) }}
                </div>
                <i class="fa fa-check color-grey-4 col-xs-2 text-center line-height-30"></i>
            </div>
        </div>
    </div>

    <div class="row margin-v-15">
        <div class="col-xs-12 col-sm-7">
            <button class="btn background-transparent border-grey-3 color-grey-3" type="submit" >Enregistrer ma
                carte&nbsp;&nbsp;<span style="display:none;" class="fa fa-spinner fa-spin fa-1x"></span>
            </button>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-3 {% if is_mobile() %}margin-v-15{% endif %}">
            <a class="cardFormToggle btn background-transparent border-grey-3 color-grey-3" {% if is_mobile() %}style="margin-top: 20px"{% endif %} type="submit" >Annuler</a>
        </div>
    </div>
    <p class="text-center color-grey-4">Visa, Carte bleue, American express. Dès 10,00 €</p>

{{ form_rest(form) }}
{{ form_end(form) }}

