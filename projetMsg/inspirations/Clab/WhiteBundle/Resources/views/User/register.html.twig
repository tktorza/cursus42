<div class="col-md-6">
    <h5 class="uppercase">Inscription</h5>
    <form action="{{ path('clab_white_user_register') }}" method="post" id="registerForm" {{ form_enctype(form) }}>
        <div class="form-group">
            {{ form_widget(form.is_male, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.first_name, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom *'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.last_name, { 'attr': {'class': 'form-control', 'placeholder': 'Nom *'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.phone, { 'attr': {'class': 'form-control ', 'placeholder': 'Mobile *'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email *'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Mot de passe *' } }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.verifyPlainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Vérifiez le mot de passe *' } }) }}
        </div>

        <p class="text-center"><button type="submit" class="btn btn-primary buttonLogin" id="buttonRegister">Enregistrez-vous</button></p>
        <p class="text-center mandatory"><span>* Champs obligatoires</span></p>
        {{ form_rest(form) }}
    </form>
</div>
