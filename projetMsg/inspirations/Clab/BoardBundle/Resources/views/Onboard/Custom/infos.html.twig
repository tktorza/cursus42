{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block bodyClass %}singlenav{% endblock %}
{% block navContent %}{% endblock %}

{% block body %}
<div class="container">
    {% include 'ClabBoardBundle:Onboard:Custom/breadcrumbs.html.twig' with { step: 'infos' } %}

    <br><br>
    <section class="panel">
        <div class="panel-body">
            <h2>1. Vos infos</h2>
            <hr>
            <form action="{{ path('board_onboard_custom_infos', { slug: proxy.slug }) }}" method="post" id="myForm" class="watch" data-changed="0">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_row(form.email, { attr: { class: 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.phone, { attr: { class: 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.description, { attr: { class: 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.small_description, { attr: { class: 'form-control' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.tags, { attr: { class: 'select2' } }) }}
                        </div>
                    </div>

                    <div class="col-md-5 col-md-offset-1">
                        <h4>J'aimerais :</h4>
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInWebsite, { attr: { class: 'icheck' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.deal.interestedInApp, { attr: { class: 'icheck' } }) }}
                        </div>

                        {% if form.deal.interestedInEmbedOrder is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInEmbedOrder, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        {% if form.deal.interestedInFacebookOrder is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInFacebookOrder, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        {% if form.deal.interestedInFoodtruckEmbed is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInFoodtruckEmbed, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        {% if form.deal.interestedInFoodtruckEmbedFacebook is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInFoodtruckEmbedFacebook, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        {% if form.deal.interestedInFoodtruckPlanningEmbed is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInFoodtruckPlanningEmbed, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        {% if form.deal.interestedInFoodtruckPlanningEmbedFacebook is defined %}
                        <div class="form-group">
                            {{ form_row(form.deal.interestedInFoodtruckPlanningEmbedFacebook, { attr: { class: 'icheck' } }) }}
                        </div>
                        {% endif %}

                        <hr>

                        <div style="max-width: 150px;">
                            <h4>Votre logo</h4>
                            <div class="img-uploader">
                                <img src="{{ proxy.cover }}" id="galleryCover">
                                <a class="btn btn-primary btn-block btn-sm ladda-button" data-style="expand-right" data-target="ajaxModal" href="{{ path('board_gallery_get', { context: context, contextPk: contextPk, entityType: 'restaurant', entityId: proxy.id }) }}">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_rest(form) }}

                <hr>
                <div class="row">
                  

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Suivant<i class="fa fa-arrow-circle-right icon-right"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
{% include 'ClabBoardBundle:Onboard:Custom/formScript.html.twig' %}
{% endblock %}