{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block bodyClass %}singlenav{% endblock %}
{% block navContent %}{% endblock %}

{% block body %}
<div class="container">
    {% include 'ClabBoardBundle:Onboard:Custom/breadcrumbs.html.twig' with { step: 'terms' } %}

    <br><br>
    <section class="panel">
        <div class="panel-body">
            <h2>7. Conditions générales</h2>
            <hr>
            <form action="{{ path('board_onboard_custom_terms', { slug: proxy.slug }) }}" method="post">

                <div class="well well2" style="height: 400px; overflow-y: scroll;">
                    {% include 'ClabBoardBundle:Subscription:contracts/' ~ terms.contractVersion ~ '.html.twig' with { terms: terms } %}
                </div>

                {% if form.validation is defined and form.validation %}
                    <div class="form-group text-center">
                        {{ form_row(form.validation, { attr: { class: 'icheck' } }) }}
                    </div>
                {% else %}
                    <div class="alert alert-success alert-alt"><i class="fa fa-pencil icon-left icon-success"></i>Signé le {{ terms.lastSign|date('d/m/Y') }}</div>
                {% endif %}

                {{ form_rest(form) }}

                <hr>
                <div class="row">
                    <div class="col-md-4">
                        <a class="btn btn-default btn-lg btn-block" href="{{ path('board_onboard_custom_subscription', { slug: proxy.slug }) }}"><i class="fa fa-arrow-circle-left icon-left"></i>Précédent</a>
                    </div>

                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Suivant<i class="fa fa-arrow-circle-right icon-right"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
{% endblock %}