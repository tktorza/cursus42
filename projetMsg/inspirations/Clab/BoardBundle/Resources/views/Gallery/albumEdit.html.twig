<form method="post" action="{{ path('board_album_edit', { context: context, contextPk: contextPk, slug: album.slug }) }}" novalidation novalidate class="ajax-form watch" data-callback="#albumList" data-changed="0">
    <div class="drawer-scroll">
        <div class="form-group">
            {{ form_row(form.name, { attr: { class: 'form-control' } }) }}
        </div>

        <div class="form-group">
            {{ form_row(form.description, { attr: { class: 'form-control', rows: 6 } }) }}
        </div>

        <div class="form-group big-label">
            {{ form_row(form.is_online, { attr: { class: 'icheck' } }) }}
        </div>

        <div class="form-group big-label">
            {{ form_row(form.isClickeat, { attr: { class: 'icheck' } }) }}
        </div>

        <div class="form-group big-label" {% if not proxy.isMobile %}style="display:none;"{% endif %}>
            {{ form_row(form.isTTT, { attr: { class: 'icheck' } }) }}
        </div>

        {{ form_rest(form) }}
    </div>
    {% include 'ClabBoardBundle:Base:drawerBottom.html.twig' with { deleteLink: album.id ? path('board_album_delete', { context: context, contextPk: contextPk, slug: album.slug }) : null } %}
</form>