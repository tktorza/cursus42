<tr id="profile-picture" class="mix">
    <td class="name">
        <img src="{{ proxy.gallery.cover.webpath | imagine_filter('square_20') }}" class="img-circle margin-right">
        Mes photos de profil
    </td>
    <td><i class="fa fa-lock fa-lg"></i></td>
    <td>
        <a class="btn btn-sm btn-primary ladda-button" data-style="expand-right" data-target="ajaxModal" href="{{ path('board_gallery_get', { context: context, contextPk: contextPk, entityType: 'restaurant', entityId: proxy.id }) }}">Gérer</a>
        &nbsp;&nbsp;
        {% set imageCount = proxy.gallery.images|length %}
        {% if imageCount > 0 %}
            <span class="badge badge-success">{{ imageCount }}</span>
        {% else %}
            <span class="badge">{{ imageCount }}</span>
        {% endif %}
    </td>
</tr>
