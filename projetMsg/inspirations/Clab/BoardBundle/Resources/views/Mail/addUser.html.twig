{% extends 'ClabBoardBundle:Mail:base.html.twig' %}
{% import 'ClabBoardBundle:Mail:macro/mail.html.twig' as mail %}

{% block body %}
    {% include 'ClabBoardBundle:Mail:partials/blockWhite.html.twig' with {
        block1: true,
        title1: "Bonjour,",
        content1: "
            Vous avez reçu une invitation pour vous inscrire sur nos services. Veuillez suivre ce lien pour compléter votre inscription.
        ",
        button1: true,
        button1Label: "Créer mon compte",
        button1Link: url('board_register', { email: request.email  }),
        block2: request.message ? true : false,
        content2: request.message ? "Message d'invitation : " ~ request.message : false,
    } %}
    {% include 'ClabBoardBundle:Mail:partials/spacer.html.twig' %}
    {% include 'ClabBoardBundle:Mail:partials/blockHelp.html.twig' %}
{% endblock %}