{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block bodyClass %}singlenav{% endblock %}

{% block body %}

    <div class="container padding-v-10" id="onboard">
        <div class="row">
            {% if restaurant.isMobile == false %}
            <div class="col-md-12">
                <section class="panel">
