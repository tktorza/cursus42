                                        <a href="#" class="list-group-item active text-center">
                                            Abonnements annuels
                                        </a>
                                        <a href="#" class="list-group-item text-center">
                                            Abonnements mensuels
                                        </a>

                                    </div>
                                </div>
                                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bhoechie-tab">

                                    <!-- Annual section -->
                                    <div class="bhoechie-tab-content active">
                                        <div class="row">
                                            {% for plan in plans %}
                                            {% if plan.id starts with 'clickeat-' %}
                                                {% if plan.interval == 'year' %}
                                                    <div class="col-md-6">
                                                        <div class="well well2 text-center">
                                                            <h4>{{ plan.name }}</h4>
                                                            <br>
                                                            {% set planAmountYear = ((plan.amount / 100)) %}
                                                            <p class="lead"><strong>{{ planAmountYear|number_format(2, '.', ',') }}€ HT / an</strong></p>
                                                            <p>Soit {{ (planAmountYear /12)|number_format(2, '.', ',
                                                            ') }}€ HT /mois</p>
                                                            <p>Commissions depuis :</p>
                                                            <p><small>
                                                                    Clickeat <strong>9%</strong><br>
                                                                    {% if planAmountYear != 0 %}
                                                                    Facebook <strong>{{ plan.id|last }}%</strong><br>
                                                                    Site internet <strong>{{ plan.id|last }}%</strong>
                                                                        {% endif %}
                                                                </small></p>
                                                            <a href="{{ path('board_subscription_upgrade_pay_plan',{'slug':plan.id,
                                                                'contextPk':contextPk}) }}"
                                                               class="btn
                                                btn-success">Choisir</a>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
