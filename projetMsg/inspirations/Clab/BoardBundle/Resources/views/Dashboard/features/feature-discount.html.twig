{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block subnav %}
    {% include 'ClabBoardBundle:Base:subnav.html.twig' with {
        category: 'loyalty',
        route: 'board_discount_library',
    } %}
{% endblock %}

{% block body %}
<div class="container padding-v-10 padding-h-40" id="dashboard">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <section class="panel">
                <div class="panel-body text-center">
                    <img src="{{ asset('front/bundle/board/img/features/icon-discount.png') }}">
                    <br><br>
                    <h2>Créez des offres ciblées</h2>
                    <span class="label label-primary">Gratuit</span>
                    <br><br>
                    <p>
                        Générez des offres et coupons pour vos clients Clickeat. Menez des campagnes d'offres à destination de vos clients et des salariés autour de vous.
                    </p>
                    <br><br>
                    <a class="btn btn-success btn-lg" href="{{ path('board_feature_activate', { contextPk: contextPk, feature: 'discount' }) }}">Activer</a>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}