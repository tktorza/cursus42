{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block subnav %}
    {% include 'ClabBoardBundle:Base:subnav.html.twig' with {
        category: 'sales',
        route: 'board_sales_reporting',
    } %}
{% endblock %}

{% block body %}
<div class="container padding-v-10 padding-h-40" id="dashboard">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <section class="panel">
                <div class="panel-body text-center">
                    <img src="{{ asset('front/bundle/board/img/features/icon-reporting.png') }}">
                    <br><br>
                    <h2>Suivez vos ventes, où que vous soyez</h2>
                    <br>
                    <p>
                        Retrouvez l'ensemble des transactions passées via votre profil Clickeat, votre site web ou votre page Facebook.
                    </p>
                    <br><br>
                    <a class="btn btn-success btn-lg" href="{{ path('board_feature_activate', { contextPk: contextPk, feature: 'reporting' }) }}">Accèder</a>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}