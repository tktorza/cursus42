{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block bodyClass %}singlenav no-padding{% endblock %}
{% block body %}
<div class="container-fluid" id="dashboard-header">
    <div class="container">
         <div class="row">
            <div class="col-md-8">
                <img src="{{ proxy.cover }}" id="galleryCover" class="img-responsive">
                <h2>{{ proxy.name }}</h2>
            </div>
             <div class="col-md-4">
                 <a class="btn btn-default btn-lg btn-block" href="{{ path('manager_switch_restaurant', { slug: null }) }}" target="_blank"><i class="fa fa-th icon-left"></i>Gestion des commandes</a>
                 <br>
             </div>
        </div>
    </div>
</div>

<div class="container padding-v-10" id="dashboard">
    <h3>Restaurant de l'enseigne</h3>
    <div class="row" id="restaurantList">
        {% for restaurant in proxy.restaurants %}
            <div class="col-sm-2 text-center">
                <a class="thumbnail white " href="{{ path('board_dashboard', { context: 'restaurant', contextPk: restaurant.slug }) }}">
                    <img src="{{ restaurant.gallery.cover.webpath | imagine_filter('square_300') }}" class="img-responsive">
                    <div class="caption text-center">
                        <h4 class="title">{{ restaurant.name }}</h4>
                    </div>
                </a>
                <a class="btn btn-primary btn-sm" href="{{ path('board_client_synch_catalog', { contextPk: contextPk, restaurantSlug: restaurant.slug }) }}"><i class="fa fa-refresh icon-left"></i>Synchroniser carte</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}