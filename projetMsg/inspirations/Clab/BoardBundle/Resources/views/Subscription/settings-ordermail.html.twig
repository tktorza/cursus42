{% extends 'ClabBoardBundle:Base:baseModal.html.twig' %}

{% block title %}Mail de notification{% endblock %}

{% block body %}
<form method="post" action="{{ path('board_settings_order_mail', { contextPk: contextPk, backUrl: backUrl|url_encode }) }}">

    {% if form.tttEventValidationMail is defined %}
        <div class="form-group">
            {{ form_row(form.tttEventValidationMail, { attr: { class: 'form-control input-lg', rows: 4 } }) }}
            <small>Plusieurs mails peuvent être saisis, veuillez-les séparer par une virgule.</small>
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_row(form.notification_mails, { attr: { class: 'form-control input-lg', rows: 4 } }) }}
        <small>Plusieurs mails peuvent être saisis, veuillez-les séparer par une virgule.</small>
    </div>

    {{ form_rest(form) }}
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</form>
{% endblock %}