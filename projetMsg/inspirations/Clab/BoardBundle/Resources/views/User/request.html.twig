{% extends 'ClabBoardBundle:Base:base.html.twig' %}

{% block subnav %}
    {% include 'ClabBoardBundle:Base:subnav.html.twig' with {
        category: proxy.isTtt is defined ? 'store' : 'client',
        route: 'board_user_library',
    } %}
{% endblock %}

{% block body %}
<div class="container-fluid padding-v-10" id="user">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well">

                <form method="post" action="{{ path('board_user_request', { context: context, contextPk: contextPk }) }}">

                    <div class="form-group">
                        {{ form_row(form.email, { attr: { class: 'form-control' } }) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.roles, { attr: { class: 'icheck' } }) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.message, { attr: { class: 'form-control', rows: 10 } }) }}
                    </div>

                    {{ form_rest(form) }}

                    <br><br>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Envoyer l'invitation</submit>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
